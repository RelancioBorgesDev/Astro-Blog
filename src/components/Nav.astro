---
import { Icon } from 'astro-icon/components';
import { navData } from '../data/navData';

const navLinks = navData;

---

<nav class="border-2 p-3 flex bg-white">
    <div class="w-full flex items-center justify-between">
       <div class="flex items-center gap-4">
            <a href="/">  
                <Icon name="logomark" width={60} height={60}/>
            </a>
         
            <div class="w-px h-12 bg-black bg-opacity-20 mx-4"></div>
            
            <ul class="flex gap-4">
                {navLinks.map(({name,path}) => (
                    <a href={path}>
                     <li class="hover:bg-slate-500/5 p-2 rounded-lg transition-all ease-in-out duration-300 text-lg font-medium">
                       {name}
                       </li>
                    </a>
                ))}
            </ul>
       </div>
        <h2 class="text-xl">Software Engineer</h2>
    </div>
</nav>


